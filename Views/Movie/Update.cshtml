@model Movie_data_model

@{
    ViewData["Title"] = "Update Page";
}

<h1>Create</h1>

<div class="row text">
    <div class="col-lg-8 offset-2">
        <div class="col-lg-12">
            <h3>Update Movie detail</h3>
        </div>
        <div class="col-lg-6 offset-3">
            <form asp-action="Create" new{ enctype="multipart/form-data" }>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Id" class="form-label"></label>
                    <input type="text" asp-for="Id" class="form-control" readonly/>
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                @{
                    var data = Model.Image;
                    var base64 = Convert.ToBase64String(data);
                    var imgsrc = string.Format("data:image/gif;base64,{0}", base64);
                }
                <div class="form-group">
                    <label class="form-label">Movie Image</label>
                    <img class="form-control" src="@imgsrc" style="max-width:300px; max-height:300px; margin-left:100px" />
                </div>
                <div class="form-group">
                    <label asp-for="Image" class="form-label"></label>
                    <input type="file" asp-for="Image" class="form-control" name="imageFile" accept="image/*" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MovieName" class="form-label"></label>
                    <input type="text" asp-for="MovieName" class="form-control" />
                    <span asp-validation-for="MovieName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MovieDateTime" class="form-label"></label>
                    <input type="datetime-local" asp-for="MovieDateTime" class="form-control" />
                    <span asp-validation-for="MovieDateTime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="email" class="form-label"></label>
                    <input type="text" asp-for="email" class="form-control" />
                    <span asp-validation-for="email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Update" asp-action="Update" class="btn btn-outline-success float-end" />
                </div>
            </form>
        </div>

    </div>
</div>



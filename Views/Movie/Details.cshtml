@model Movie_data_model

@{
    ViewData["Title"] = "Details Page";
}

<div class="row text">
    <div class="col-lg-8 offset-2">
        <div class="col-lg-12">
            <h3>Movie details</h3>
        </div>
        <div class="col-lg-6 offset-3">
            <form asp-action="Create">
                @{
                    var data = Model.Image;
                    var base64 = Convert.ToBase64String(data);
                    var imgsrc = string.Format("data:image/gif;base64,{0}", base64);
                }
                <div class="form-group">
                    <label class="form-label">Movie Image</label>
                    <img class="form-control" src="@imgsrc" style="max-width:300px; max-height:300px; margin-left:100px" />
                </div>
                <div class="form-group">
                    <label asp-for="MovieName" class="form-label"></label>
                    <input type="text" asp-for="MovieName" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="MovieDateTime" class="form-label"></label>
                    <input type="datetime-local" asp-for="MovieDateTime" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="email" class="form-label"></label>
                    <input type="text" asp-for="email" class="form-control" readonly />
                </div>
                <div class="form-group" style="margin-top:4px">
                    <a asp-controller="Movie" asp-action="Index"  class="btn btn-primary text-white">Show all</a>
                    <a asp-controller="Movie" asp-action="Update" asp-route-id="@Model.Id" class="btn btn-success text-white float-end">Edit</a>
                </div>
            </form>
        </div>

    </div>
</div>


